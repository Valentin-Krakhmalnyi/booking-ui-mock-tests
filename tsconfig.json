{
    "compilerOptions": {
      "jsx": "react",
      "target": "ES2020",
      "module": "CommonJS",
      "lib": ["ES2020", "DOM"],
      "outDir": "dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true
    },
    "include": ["tests", "server.ts", "src", "playwright.config.ts"],
    "exclude": ["node_modules", "dist"]
  }
  